{
  "name": "gatsby-sarkara",
  "private": true,
  "packageManager": "pnpm@7.24.3",
  "version": "1.0.0",
  "description": "",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=16",
    "pnpm": ">=3"
  },
  "author": "cieloazul310",
  "license": "ISC",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier \"{packages,apps}/*/src/**.{js,jsx,ts,tsx}\" --parser typescript --write",
    "eslint": "eslint packages/*/src/* --fix --ignore-pattern \"**/stories/**/*\" && eslint apps/ --fix",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "turbo": "^1.7.0",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "packages/*/src/**/*.{js,ts,jsx,tsx}": [
      "pnpm format"
    ]
  }
}
